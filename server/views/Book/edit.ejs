<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Account Holder Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Account Holder Name" name="Name" value="<%= Book.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Account Manager Name</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Account Manager Name" name="Author" value="<%= Book.Author %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Transaction Date</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Transaction Date" name="Published" value="<%= Book.Published %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Transaction Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Transaction Description" name="Description" required><%= Book.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Transaction Time</label>
                    <div class="input-group"> <div class="input-group-prepend"> <span class="input-group-text">$</span> </div>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Transaction Amount" name="Price" value="<%= Book.Price %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>