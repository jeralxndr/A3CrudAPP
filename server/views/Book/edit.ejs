<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">First Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="First name" name="Name" value="<%= Book.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Last Name</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Last name" name="Author" value="<%= Book.Author %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Height</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Height (cm)" name="Published" value="<%= Book.Published %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Weight</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Weight (lbs)" name="Description" required><%= Book.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Age</label>
                    <div class="input-group"> <div class="input-group-prepend"> <span class="input-group-text"></span> </div>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Age" name="Price" value="<%= Book.Price %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>