<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!-- Book Database -->
<link rel="stylesheet" href="Content\list.css">
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-8">
            <h1><%= title %></h1>
            <br>
            <a href="/bookslist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Financial Entry
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Account Holder Name</th>
                    <th class="text-center col-2">Account Manager Name</th>
                    <th class="text-center col-2">Transaction Date</th>
                    <th class="text-center col-3">Transaction Description</th>
                    <th class="text-center col-2">Transaction Amount</th> 
                    <th class="text-center col-3">Edit/Delete</th>
                </tr>
                <% for(let count = 0; count < BookList.length; count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= BookList[count].Name %></td>
                    <td class="text-center col-2"><%= BookList[count].Author %></td>
                    <td class="text-center col-2"><%= BookList[count].Published %></td>
                    <td class="text-center col-3"><%= BookList[count].Description %></td>
                    <td class="text-center col-2"> <div class="input-group"> <div class="input-group-prepend"> <span class="input-group-text">$</span> </div> <input type="text" class="form-control" value="<%= BookList[count].Price %>" readonly> </div>
                    <td class="text-center col-3">
                        <a href="/bookslist/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm mb-1">
                            <i class="fas fa-pencil-alt"></i> Edit
                        </a>
                        <a href="/bookslist/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm" onclick="return confirmDelete()">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>
<%- include ../Partials/footer.ejs%>

<script>
function confirmDelete() {
    return confirm('Are you sure you want to delete this entry?');
}
</script>
